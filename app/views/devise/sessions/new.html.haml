%h2 Log in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row
    .input-field.col.s12
      = f.input :email, required: true, autofocus: true, label: false, placeholder: 'E-Mail'
      = f.input :password, required: true, label: false, placeholder: 'Senha'
  %p
    = f.input :remember_me, :type => "checkbox", as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Entrar"
